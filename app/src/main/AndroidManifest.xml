<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.skyheight">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/applogo2"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.NumberOfPlotActivity"></activity>
        <activity android:name=".activity.ActivateActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddPlotActivity" />
        <activity android:name=".activity.ActivateUserActivity" />
        <activity
            android:name=".activity.ProfileDetailActivity"
            android:parentActivityName=".activity.CustomerListActivity" />
        <activity
            android:name=".activity.SiteDetailActivity"
            android:parentActivityName=".activity.PlotList" />
        <activity
            android:name=".activity.PlotList"
            android:parentActivityName=".activity.AdminViewActivity" />
        <activity
            android:name=".activity.UserProfileActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.CustomerListActivity"
            android:parentActivityName=".activity.AdminViewActivity" />
        <activity
            android:name=".activity.AddSiteActivity"
            android:parentActivityName=".activity.AdminViewActivity" />
        <activity
            android:name=".activity.UserLoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.SignupActivity"
            android:parentActivityName=".activity.AdminViewActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.AdminViewActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.AdminActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.HomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>