<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.skyheight">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/applogo2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ProfileDetailActivity" android:parentActivityName=".activity.CustomerListActivity"></activity>
        <activity
            android:name=".activity.SiteDetailActivity"
            android:parentActivityName=".activity.SiteListView"></activity>
        <activity
            android:name=".activity.SiteListView"
            android:parentActivityName=".activity.AdminViewActivity" />
        <activity android:name=".activity.PickImageActivity" />
        <activity
            android:name=".activity.DeleteCustomerActivity"
            android:parentActivityName=".activity.AdminViewActivity" />
        <activity
            android:name=".activity.UserProfileActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.CustomerListActivity"
            android:parentActivityName=".activity.AdminViewActivity" />
        <activity
            android:name=".activity.AddSiteActivity"
            android:parentActivityName=".activity.AdminViewActivity" />
        <activity android:name=".activity.FavoriteList" />
        <activity android:name=".activity.UserLoginActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SignupActivity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activity.AdminViewActivity" />
        <activity
            android:name=".activity.AdminViewActivity"
            android:parentActivityName=".activity.HomeActivity"></activity>
        <activity
            android:name=".activity.AdminActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.HomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>